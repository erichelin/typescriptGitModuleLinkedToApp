{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "es6",
    "lib": ["ES6", "DOM"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "alwaysStrict": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
